<% layout('layouts/boilerplate') %>
<h1 class="text-center mb-4">All Hospitals</h1>

<% for(let hospital of hospitals){ %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img style="max-height: 260px ;" src="<%= hospital.imgUrl %>" class="card-img-top img-fluid" alt="..." />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=hospital.title %></h5>
        <p class="card-text"><%= hospital.description %></p>
        <p class="card-text">
            <small class="text-muted"><%= hospital.location %></small>
        </p>
        <a href="/hospitals/<%=hospital._id%>" class="btn btn-primary mt-1 ">Show Hospital</a>
      </div>
    </div>
    </div>
  </div>
</div>

<% } %>
